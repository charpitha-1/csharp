@using VisitorManagement.DTO
@model UserAddRoleDTO;
<h3>
    Add New User
</h3>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm(FormMethod.Post))
        {
           
            <div>
                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" })
            </div>
            <div>
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
            <div>
                @Html.DropDownListFor(a => a.Role, Model.RoleData, new { @class = "form-control", placeholder = "UserRole" })
            </div>
            <div>
                <input type="submit" value="Add User" />
            </div>
        }
    </div>

</div>
